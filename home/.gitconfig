[user]
  email = mauricio@pasquierjuan.com.ar
  name = Mauricio Pasquier Juan
[color]
  ui = auto
[core]
  autocrlf = input
  excludesfile = ~/.config/git/global.gitignore
  quotepath = off
[push]
  default = current
[alias]
  lg = log --graph --all --format=format:'%C(bold blue)%h%C(reset) â€” %C(bold green)%ar%C(reset) by %C(bold white)%an%C(reset)%C(bold yellow)%d%C(reset)%n%n %C(white)%s%C(reset)%n' --abbrev-commit --date=relative
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[pull]
  ff = only
[fetch]
  prune = true
[init]
  defaultBranch = main
